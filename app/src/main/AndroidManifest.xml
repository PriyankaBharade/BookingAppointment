<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bookappointment">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookAppointment">
        <activity android:name=".app.ui.viewmodel.BookingDetailsActivity"></activity>
        <activity android:name=".app.ui.BookingSlotActivity"></activity>
        <activity android:name=".app.ui.DoctorListActivity" />
        <activity android:name=".app.ui.RegistrationActivity" />
        <activity
            android:name=".app.ui.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".app.ui.MainActivity" />
        <activity android:name=".app.ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>